<h1 class="display-6">つぶやきアプリ</h1>
<div>
    <div class="container">
        <% if current_user %>
            <div>
                <div class="form-group">
                    <%= form_with model: @tweet, url: items_path, local: true do |form| %>
                        <%= form.text_field :tweet, class: "form-control m-1", placeholder: "ツイート内容" %>
                        <%= form.submit "ツイート", class:"btn btn-primary m-1" %>
                    <% end %>
                </div>
            </div>
        <% end %>
    </div>
    <div class='jscroll'>
        <%= render partial: 'items/tweet', locals: {tweets: @tweets} %>
        <%= paginate @tweets %>
    </div>
</div>