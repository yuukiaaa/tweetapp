<% @page_title = "いいね！した記事一覧" %>
<h1><%= @page_title %></h1>

<% if @article.present? %>
    <ul>
        <% @article.each do |article| %>
            <li>
                <%= link_to article.title, article %>
                by <%= article.user.name %>
                - <%= link_to "削除", unlike_article_path(article), method: :patch, data: {confirm: "削除しますか"} %>
            </li>
        <% end %>
    </ul>
    <%= paginate @article %>
<% else %>
    <p>記事がありません。</p>
<% end %>